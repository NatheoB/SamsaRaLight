	journal = {Geoscientific Model Development},
	author = {Jonard, Mathieu and André, Frédéric and de Coligny, François and de Wergifosse, Louis and Beudez, Nicolas and Davi, Hendrik and Ligot, Gauthier and Ponette, Quentin and Vincke, Caroline},
	month = mar,
