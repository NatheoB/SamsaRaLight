	author = {Lines, Emily Rebecca and Fischer, Fabian Jörg and Owen, Harry Jon Foord and Jucker, Tommaso},
	year = {2022},
	note = {\_eprint: https://besjournals.onlinelibrary.wiley.com/doi/pdf/10.1111/1365-2745.13944},
	pages = {1730--1745},
	file = {Full Text PDF:C\:\\Users\\Nathéo Beauchamp\\Zotero\\storage\\R6R76DNW\\Lines et al. - 2022 - The shape of trees Reimagining forest ecology in three dimensions with remote sensing.pdf:application/pdf;Snapshot:C\:\\Users\\Nathéo Beauchamp\\Zotero\\storage\\KWVQ43SS\\1365-2745.html:text/html},
